# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_APPLICATION_ID=your_application_id_here

# Relay API Configuration
API_BASE_URL=https://api.rlymsg.com
API_SECRET=your_worker_api_secret_here

# Redis Configuration (optional - enables handle lookup caching)
# Railway auto-injects this when Redis addon is added
REDIS_URL=redis://localhost:6379

# Worker Encryption Keys (X25519)
# Generate with: npm run generate-keypair
WORKER_ENCRYPTION_PRIVATE_KEY=hex_encoded_32_byte_private_key
WORKER_SIGNING_PRIVATE_KEY=hex_encoded_64_byte_ed25519_private_key
