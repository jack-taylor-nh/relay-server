{
  "name": "@relay/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs = require('fs'); const path = require('path'); const src = 'src/assets'; const dest = 'dist/assets'; if (!fs.existsSync(dest)) fs.mkdirSync(dest, {recursive: true}); fs.readdirSync(src).forEach(f => fs.copyFileSync(path.join(src, f), path.join(dest, f)));\"",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "node ./node_modules/drizzle-kit/bin.cjs push",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "dotenv": "^17.2.3",
    "hono": "^4.0.0",
    "ioredis": "^5.9.2",
    "postgres": "^3.4.3",
    "resend": "^6.9.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
